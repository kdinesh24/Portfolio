---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { DarkModeToggle } from '@/components/DarkModeToggle';
import Skills from '@/components/Skills.astro';
import profilePic from '../assets/profile.jpg';
// TODO: Add your project images to the assets folder
import projectPic1 from '../assets/project-1.png'; 
import projectPic2 from '../assets/project-2.png';
import projectPic3 from '../assets/project-3.png';

// Base classes for a consistent look
const bentoCardClasses = "bg-gray-50 dark:bg-[#1a1a1a] border border-gray-200 dark:border-[#2a2a2a] rounded-3xl p-7 flex flex-col";
const socialLinkBaseClasses = "group bg-gray-100 dark:bg-[#1a1a1a] border border-gray-200 dark:border-[#2a2a2a] rounded-xl flex items-center justify-center aspect-square transition-colors duration-200";
const socialIconBaseClasses = "w-6 h-6 text-black dark:text-white transition-colors duration-200";
---

<Layout title="Dinesh – Portfolio">
  <main class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6 auto-rows-[minmax(0,_1fr)] h-full">

    <!-- Hi, I'm Dinesh (Top Left) -->
    <div class:list={[bentoCardClasses, "lg:col-span-2 lg:row-span-1 justify-center"]}>
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-[#CCCCCC]">Hi, I'm Dinesh —</h1>
      <p class="mt-3 text-lg text-gray-600 dark:text-[#737373]">
        Software developer, focused on delivering clean and efficient code. based in Punjab
      </p>
    </div>

    <!-- Project Image 1 with Final Hover Fix -->
    <a href="#" class="lg:col-span-1 lg:row-span-1 relative group rounded-3xl overflow-hidden block">
      <Image src={projectPic1} alt="Job Portal Project" class="w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-out group-hover:scale-95"/>
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"></div>
      <div class="absolute bottom-0 left-0 p-6 w-full flex items-center justify-between pointer-events-none">
        <h3 class="text-[#CCCCCC] text-xl font-bold opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out translate-y-4 group-hover:translate-y-0">Job Portal</h3>
        <svg class="w-7 h-7 text-[#CCCCCC] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out -translate-x-4 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </a>

    <!-- Project Image 2 with Final Hover Fix -->
    <a href="#" class="lg:col-span-1 lg:row-span-1 relative group rounded-3xl overflow-hidden block">
      <Image src={projectPic2} alt="Project Two" class="w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-out group-hover:scale-95"/>
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"></div>
      <div class="absolute bottom-0 left-0 p-6 w-full flex items-center justify-between pointer-events-none">
        <h3 class="text-[#CCCCCC] text-xl font-bold opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out translate-y-4 group-hover:translate-y-0">Project Two</h3>
        <svg class="w-7 h-7 text-[#CCCCCC] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out -translate-x-4 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </a>

    <!-- Socials & Projects Container -->
    <div class="lg:col-span-1 lg:row-span-2 flex flex-col gap-6">
      <div class="grid grid-cols-3 gap-4">
        {/* Twitter (X) Icon */}
        <a href="https://x.com/K24Dinesh" class:list={[socialLinkBaseClasses, "hover:bg-[#1DA1F2] dark:hover:bg-[#1DA1F2]"]}>
            <svg class:list={[socialIconBaseClasses, "group-hover:text-white"]} fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        
        {/* LinkedIn Icon */}
        <a href="https://www.linkedin.com/in/kdinesh24/" class:list={[socialLinkBaseClasses, "hover:bg-[#1063B6] dark:hover:bg-[#1063B6]"]}>
            <svg class:list={[socialIconBaseClasses, "group-hover:text-white"]} fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.225 0z"/></svg>
        </a>

        {/* GitHub Icon */}
        <a href="https://github.com/kdinesh24" download="Dinesh-Resume.pdf" class:list={[socialLinkBaseClasses, "hover:bg-black dark:hover:bg-white"]}>
            <svg class:list={[socialIconBaseClasses, "group-hover:text-white dark:group-hover:text-black"]} fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        </a>

        {/* LeetCode Icon */}
        <a href="https://leetcode.com/u/kdinesh24/" class:list={[socialLinkBaseClasses, "hover:bg-amber-400 dark:hover:bg-amber-400"]}>
          <svg class:list={[socialIconBaseClasses, "group-hover:text-black"]} fill="currentColor" viewBox="0 0 32 32">
            <path d="M21.469 23.907l-3.595 3.473c-0.624 0.625-1.484 0.885-2.432 0.885s-1.807-0.26-2.432-0.885l-5.776-5.812c-0.62-0.625-0.937-1.537-0.937-2.485 0-0.952 0.317-1.812 0.937-2.432l5.76-5.844c0.62-0.619 1.5-0.859 2.448-0.859s1.808 0.26 2.432 0.885l3.595 3.473c0.687 0.688 1.823 0.663 2.536-0.052 0.708-0.713 0.735-1.848 0.047-2.536l-3.473-3.511c-0.901-0.891-2.032-1.505-3.261-1.787l3.287-3.333c0.688-0.687 0.667-1.823-0.047-2.536s-1.849-0.735-2.536-0.052l-13.469 13.469c-1.307 1.312-1.989 3.113-1.989 5.113 0 1.996 0.683 3.86 1.989 5.168l5.797 5.812c1.307 1.307 3.115 1.937 5.115 1.937 1.995 0 3.801-0.683 5.109-1.989l3.479-3.521c0.688-0.683 0.661-1.817-0.052-2.531s-1.849-0.74-2.531-0.052zM27.749 17.349h-13.531c-0.932 0-1.692 0.801-1.692 1.791 0 0.991 0.76 1.797 1.692 1.797h13.531c0.933 0 1.693-0.807 1.693-1.797 0-0.989-0.76-1.791-1.693-1.791z"/>
          </svg>
        </a>
        
        {/* Mail Icon */}
        <a href="mailto:dinesh.1124k@gmail.com" class:list={[socialLinkBaseClasses, "hover:bg-red-500 dark:hover:bg-red-500"]}>
          <svg class:list={[socialIconBaseClasses, "group-hover:text-white"]} fill="currentColor" viewBox="0 0 24 24"><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/></svg>
        </a>

        {/* Resume Icon */}
        <a href="/resume.pdf" class:list={[socialLinkBaseClasses, "hover:bg-green-500 dark:hover:bg-green-500"]}>
          <svg class:list={[socialIconBaseClasses, "group-hover:text-white"]} fill="currentColor" viewBox="0 0 24 24"><path d="M14 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8l-6-6zM6 20V4h7v5h5v11H6z"/></svg>
        </a>
      </div>

      <!-- Projects Card (Links to /projects) -->
      <a href="/projects" class:list={[bentoCardClasses, "flex-grow transition-colors duration-200 hover:bg-gray-100 dark:hover:bg-[#2a2a2a]"]}>
        <h2 class="text-sm font-semibold uppercase text-gray-500 dark:text-[#737373]">Projects</h2>
        <div class="flex-grow flex items-start pt-2">
            <p class="text-xl font-semibold text-gray-800 dark:text-[#CCCCCC]">See what I’ve been working on.</p>
        </div>
      </a>
    </div>

    {/* Profile Picture */}
    <div class="lg:col-span-1 lg:row-span-1">
      <Image src={profilePic} alt="Dinesh" class="w-full h-full object-cover rounded-3xl"/>
    </div>

    {/* About Section */}
    <div class:list={[bentoCardClasses, "lg:col-span-2 lg:row-span-1 justify-center"]}>
      <h2 class="text-sm font-semibold uppercase text-gray-500 dark:text-[#737373]">About</h2>
      <div class="flex-grow flex items-center">
        <p class="mt-2 text-xl font-semibold text-gray-800 dark:text-[#CCCCCC]">Passionate about design and enjoy solving problems.</p>
      </div>
    </div>

    <!-- Project Image 3 with Final Hover Fix -->
    <a href="#" class="lg:col-span-1 lg:row-span-1 relative group rounded-3xl overflow-hidden block">
      <Image src={projectPic3} alt="Project Three" class="w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-out group-hover:scale-95"/>
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"></div>
      <div class="absolute bottom-0 left-0 p-6 w-full flex items-center justify-between pointer-events-none">
        <h3 class="text-[#CCCCCC] text-xl font-bold opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out translate-y-4 group-hover:translate-y-0">Project Three</h3>
        <svg class="w-7 h-7 text-[#CCCCCC] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out -translate-x-4 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </a>
    
    <!-- Currently Learning Card -->
    <div class:list={[bentoCardClasses, "lg:col-span-2 lg:row-span-1"]}>
      <h2 class="text-sm font-semibold uppercase text-gray-500 dark:text-[#737373]">Currently Learning</h2>
      <div class="flex-grow flex items-center justify-center">
        <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-4">
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-blue-500"></span>
            <span class="font-semibold text-gray-700 dark:text-[#CCCCCC]">Three.js</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-red-500"></span>
            <span class="font-semibold text-gray-700 dark:text-[#CCCCCC]">Redis</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-green-500"></span>
            <span class="font-semibold text-gray-700 dark:text-[#CCCCCC]">GraphQL</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-purple-500"></span>
            <span class="font-semibold text-gray-700 dark:text-[#CCCCCC]">WebGL</span>
          </div>
        </div>
      </div>
    </div>

    {/* Stack I use */}
    <div class:list={[bentoCardClasses, "lg:col-span-1 lg:row-span-1"]}>
      <h2 class="text-lg font-semibold text-gray-800 dark:text-[#CCCCCC]">Stack I use</h2>
      <div class="flex-grow flex items-center justify-start w-full h-full overflow-hidden">
        <Skills />
      </div>
    </div>

    {/* Dark Mode Toggle */}
    <div class:list={[bentoCardClasses, "lg:col-span-1 lg:row-span-1 flex items-center justify-center"]}>
      <DarkModeToggle client:load/>
    </div>

    {/* Have a project */}
    <div class:list={[bentoCardClasses, "lg:col-span-1 lg:row-span-1 justify-center"]}>
      <h2 class="text-lg font-semibold text-gray-800 dark:text-[#CCCCCC]">Have a project in mind?</h2>
      <div class="flex-grow flex items-center">
        <button class="w-full px-4 py-2 bg-white dark:bg-[#2d2d2d] border border-gray-300 dark:border-zinc-600 rounded-lg font-semibold text-gray-800 dark:text-gray-100">Copy email</button>
      </div>
    </div>
  </main>
</Layout>
