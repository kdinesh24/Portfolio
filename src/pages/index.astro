---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { DarkModeToggle } from '@/components/DarkModeToggle';
import Skills from '@/components/Skills.astro';
import profilePic from '../assets/profile.jpg';
// TODO: Add your project images to the assets folder
import projectPic1 from '../assets/project-1.png';
import projectPic2 from '../assets/project-2.png';
import projectPic3 from '../assets/project-3.png';

// Base classes for a consistent look
const bentoCardClasses =
  'bg-gray-50 dark:bg-[#1a1a1a] border border-gray-200 dark:border-[#2a2a2a] rounded-3xl p-7 flex flex-col';
const socialLinkBaseClasses =
  'group bg-gray-100 dark:bg-[#1a1a1a] border border-gray-200 dark:border-[#2a2a2a] rounded-xl flex items-center justify-center aspect-square transition-colors duration-200';
const socialIconBaseClasses =
  'w-6 h-6 text-black dark:text-white transition-colors duration-200';
---

<Layout title="Dinesh – Portfolio">
  <main
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6 h-full"
    style="grid-template-rows: repeat(3, minmax(0, 1fr));"
  >
    <!-- Hi, I'm Dinesh (Top Left) -->
    <div
      class:list={[
        bentoCardClasses,
        'lg:col-span-2 lg:row-span-1 justify-center',
      ]}
    >
      <h1
        class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-[#CCCCCC]"
      >
        Hi, I'm Dinesh —
      </h1>
      <p class="mt-3 text-lg text-gray-600 dark:text-[#737373]">
        Full-stack developer specializing in React, Node.js, and modern web technologies.
      </p>
    </div>

    <!-- Project Image 1 with Final Hover Fix -->
    <a
      href="#"
      class="lg:col-span-1 lg:row-span-1 relative group rounded-3xl overflow-hidden block"
    >
      <Image
        src={projectPic1}
        alt="Job Portal Project"
        class="w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-out group-hover:scale-95"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 p-6 w-full flex items-center justify-between pointer-events-none"
      >
        <h3
          class="text-[#CCCCCC] text-xl font-bold opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out translate-y-4 group-hover:translate-y-0"
        >
          Job Portal
        </h3>
        <svg
          class="w-7 h-7 text-[#CCCCCC] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out -translate-x-4 group-hover:translate-x-0"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </div>
    </a>

    <!-- Project Image 2 with Final Hover Fix -->
    <a
      href="#"
      class="lg:col-span-1 lg:row-span-1 relative group rounded-3xl overflow-hidden block"
    >
      <Image
        src={projectPic2}
        alt="Project Two"
        class="w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-out group-hover:scale-95"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-out"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 p-6 w-full flex items-center justify-between pointer-events-none"
      >
        <h3
          class="text-[#CCCCCC] text-xl font-bold opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out translate-y-4 group-hover:translate-y-0"
        >
          Project Two
        </h3>
        <svg
          class="w-7 h-7 text-[#CCCCCC] opacity-0 group-hover:opacity-100 transition-all duration-300 ease-out -translate-x-4 group-hover:translate-x-0"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </div>
    </a>

