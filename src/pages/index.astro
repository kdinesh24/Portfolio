          class:list={[
            socialLinkBaseClasses,
            'hover:bg-black dark:hover:bg-white',
          ]}
        >
          <svg
            class:list={[
              socialIconBaseClasses,
              'group-hover:text-white dark:group-hover:text-black',
            ]}
