---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dinesh - Portfolio" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
    <style>
      body {
        font-family: 'Funnel Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
      }
    </style>
  </head>
  <body class="bg-gray-100 dark:bg-[#0c0c0c] text-zinc-800 dark:text-zinc-200">
    <div class="flex items-center justify-center min-h-screen p-4 sm:p-6">
      <div class="w-full max-w-screen-xl min-h-[90vh] bg-white dark:bg-[#0c0c0c] border border-gray-200 dark:border-[#2a2a2a] rounded-3xl shadow-lg p-6 md:p-8">
        <slot />
      </div>
    </div>
    
    {/* This script fixes the dark mode issue across all pages */}
    <script is:inline>
      function applyTheme() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      }
      // Apply theme on initial load
      applyTheme();
      // Re-apply theme after Astro's view transitions
      document.addEventListener('astro:after-swap', applyTheme);
    </script>
  </body>
</html>
